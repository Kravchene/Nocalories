<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.Login_via_email">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="246dp"
        android:layout_height="234dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/bez_fona_3"
        tools:layout_editor_absoluteY="30dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/russo_one_regular"
        android:shadowColor="@color/black"
        android:shadowDx="-2"
        android:shadowRadius="1"
        android:text="@string/Login_via_email"
        android:textColor="@color/pale_green"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:text="@string/Email"
        android:textColor="@color/gray_10"
        android:textSize="16sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/loginInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/pale_green"
        app:boxStrokeWidth="2dp"
        app:counterMaxLength="25"
        app:endIconMode="clear_text"
        app:hintTextColor="@color/pale_green"
        app:startIconDrawable="@drawable/baseline_person_24"
        android:layout_marginBottom="10dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/loginEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:fontFamily="@font/alegreya_semi_bold"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/passwordText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:text="@string/password"
        android:textColor="@color/gray_10"
        android:textSize="16sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="10dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/pale_green"
        app:hintTextColor="@color/pale_green"
        app:boxStrokeWidth="2dp"
        app:passwordToggleContentDescription="description"
        app:passwordToggleEnabled="true"
        app:startIconDrawable="@drawable/baseline_lock_24"
        app:passwordToggleTint="@color/pale_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_semi_bold"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEntrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Entrance"
        android:background="@drawable/batton_b"
        android:textColor="@color/pale_green"
        android:textSize="16sp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:paddingHorizontal="80dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />

</LinearLayout>