<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    android:layout_height="match_parent"
    tools:context=".ui.activity.registrationBlock.RegistrationViaGoogle">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="246dp"
        android:layout_height="234dp"
        android:layout_marginTop="80dp"
        android:src="@drawable/bez_fona_3"
        tools:layout_editor_absoluteY="30dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />
    <TextView
        android:layout_gravity="center"
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="80dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/russo_one_regular"
        android:shadowColor="@color/black"

        android:text="@string/Login_via_google"
        android:textColor="@color/red"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/genderText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:text="@string/gender"
        android:textColor="@color/gray_10"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:background="@drawable/test"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/alegreya_semi_bold"
            android:text="@string/man"
            android:textSize="16sp"
            tools:ignore="MissingConstraints"
            app:buttonTint="@color/pale_green"
            app:useMaterialThemeColors="@color/pale_green"
            />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Woman"
            android:paddingEnd="10dp"
            android:shadowColor="@color/black"
            android:fontFamily="@font/alegreya_semi_bold"
            app:buttonTint="@color/pale_green"
            app:useMaterialThemeColors="@color/pale_green"/>

    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:text="@string/Goal"
        android:textColor="@color/gray_10"
        android:textSize="16sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/GoalInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="12dp"
        app:boxBackgroundColor="@color/white"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeColor="@color/pale_green"
        app:boxStrokeWidth="2dp"
        app:hintTextColor="@color/pale_green">

        <AutoCompleteTextView
            android:id="@+id/autoCompleteTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:inputType="none"
            android:fontFamily="@font/alegreya_semi_bold"
            android:text="@string/Be_in_shape"
            tools:ignore="LabelFor" />

    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="12dp"
        android:weightSum="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_semi_bold"
            android:textColor="@color/gray_10"
            android:textSize="16sp"
            android:layout_weight="1"
            android:text="@string/Year_of_birth"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_semi_bold"
            android:textColor="@color/gray_10"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="9dp"
            android:text="@string/Weight"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/alegreya_semi_bold"
            android:textColor="@color/gray_10"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginStart="14dp"
            android:text="@string/Height"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/YearInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/pale_green"
            app:boxStrokeWidth="2dp"
            app:counterMaxLength="4"
            app:hintTextColor="@color/pale_green"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/YearEditText"
                android:layout_marginTop="10dp"
                android:maxLength="4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/weightInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_weight="1"
            app:counterMaxLength="3"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/pale_green"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/pale_green">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/weightEditText"
                android:maxLength="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/HeightInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="10dp"
            android:elevation="10dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/pale_green"
            app:boxStrokeWidth="2dp"
            app:counterMaxLength="3"
            app:hintTextColor="@color/pale_green"
            android:layout_weight="1"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/HeightEditText"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="3"
                android:inputType="number"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/gray_10"
            android:text="@string/user_agreement1"
            android:fontFamily="@font/alegreya_semi_bold"
            android:textSize="16sp"
            app:useMaterialThemeColors="true"/>
        <TextView
            android:id="@+id/user_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/alegreya_semi_bold"
            android:textColor="@color/pale_green"
            android:text="@string/user_agreement2"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEntrance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Entrance"
        android:background="@drawable/batton_b"
        android:textColor="@color/pale_green"
        android:textSize="16sp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:paddingHorizontal="80dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />
</LinearLayout>
