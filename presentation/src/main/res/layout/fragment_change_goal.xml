<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.activity.mainBlock.profile.ChangeGoal">



    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/bez_fona_3"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Change_goal"
        android:textSize="20sp"
        android:textColor="@color/pale_green"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alegreya_semi_bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/GoalInputLayout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxStrokeColor="@color/pale_green"
            app:boxStrokeWidth="2dp"
            app:hintTextColor="@color/pale_green">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:inputType="none"
                android:fontFamily="@font/alegreya_semi_bold"
                android:text="@string/Be_in_shape"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:background="@drawable/batton_b"
        android:textColor="@color/pale_green"
        android:textSize="16sp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/alegreya_semi_bold"
        android:paddingHorizontal="80dp"
        android:layout_gravity="center"
        tools:ignore="MissingConstraints" />

</LinearLayout>